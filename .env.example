# Core
COMPOSE_PROJECT_NAME=clickstream-guardian
LOG_LEVEL=INFO

# Kafka / Schema Registry
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_INTERNAL_SERVERS=kafka-1:29092,kafka-2:29093,kafka-3:29094
SCHEMA_REGISTRY_URL=http://localhost:8081

# Data Lake (AWS S3 or MinIO-compatible)
AWS_ACCESS_KEY_ID=replace_me
AWS_SECRET_ACCESS_KEY=replace_me
AWS_REGION=ap-northeast-2
S3_BUCKET=km-data-lake
# MinIO 로컬 환경에서만 사용 (Docker 내부 네트워크)
S3_ENDPOINT=http://minio:9000

# PostgreSQL (Clickstream DB)
POSTGRES_USER=admin
POSTGRES_PASSWORD=replace_me
POSTGRES_DB=clickstream
POSTGRES_PORT=5432
DATABASE_URL=postgresql://admin:replace_me@postgres:5432/clickstream

# Airflow
AIRFLOW_DB_USER=airflow
AIRFLOW_DB_PASSWORD=replace_me
AIRFLOW_DB_NAME=airflow
AIRFLOW__CORE__FERNET_KEY=replace_with_32_urlsafe_base64_key
AIRFLOW__WEBSERVER__SECRET_KEY=replace_me
AIRFLOW_ADMIN_USER=admin
AIRFLOW_ADMIN_PASSWORD=replace_me
AIRFLOW_ADMIN_EMAIL=admin@example.com

# API / Dashboard
API_URL=http://api:8000
CORS_ORIGINS=*

# Producer replay
REPLAY_SPEED=1.0
ENABLE_SPIKE=false
SPIKE_SESSION_ID=1
SPIKE_MULTIPLIER=100

# Alerting (DLQ DAG)
EMAIL_SENDER=you@example.com
EMAIL_PASSWORD=replace_me
EMAIL_RECIPIENT=you@example.com
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/replace/me
SLACK_CHANNEL=#alerts

# DLQ Alert thresholds
DLQ_WARNING_THRESHOLD=1
DLQ_CRITICAL_THRESHOLD=20
DLQ_SUPPRESS_MINUTES=10
